<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ar.edu.gymcontrol.controller.ReportesController"
      spacing="12" styleClass="screen">
    <children>
        <Label text="Reportes" styleClass="h1"/>

        <TitledPane text="Morosos hoy (ordenado: Apellido, Nombre)">
            <content>
                <VBox spacing="8">
                    <HBox spacing="8">
                        <Button text="Listar morosos" onAction="#listarMorosos"/>
                        <Label fx:id="morososCount" />
                    </HBox>
                    <TableView fx:id="tablaMorosos" prefHeight="220">
                        <columns>
                            <TableColumn fx:id="colDni" text="DNI" prefWidth="120"/>
                            <TableColumn fx:id="colApe" text="Apellido" prefWidth="160"/>
                            <TableColumn fx:id="colNom" text="Nombre" prefWidth="160"/>
                            <TableColumn fx:id="colCuota" text="Cuota hasta" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </content>
        </TitledPane>

        <TitledPane text="Buscar socio por DNI (BÃºsqueda Binaria)">
            <content>
                <HBox spacing="8">
                    <TextField fx:id="dniBuscarField" promptText="DNI"/>
                    <Button text="Buscar" onAction="#buscarPorDni"/>
                    <Label fx:id="resultadoBusqueda"/>
                </HBox>
            </content>
        </TitledPane>
    </children>
    <padding><Insets top="0" right="10" bottom="10" left="0"/></padding>
</VBox>
