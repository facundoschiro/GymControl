<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ar.edu.gymcontrol.controller.EjerciciosController">

    <top>
        <HBox spacing="12" styleClass="screen">
            <children>
                <Label text="Ejercicios" styleClass="h1"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="buscarField" promptText="Buscar por nombre..."/>
                <Button text="Buscar" onAction="#buscar"/>
                <Button text="Limpiar" onAction="#limpiarBusqueda"/>
            </children>
            <padding><Insets top="8" right="10" bottom="8" left="10"/></padding>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tabla" prefHeight="420">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="260"/>
                <TableColumn fx:id="colGrupo" text="Grupo muscular" prefWidth="160"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <TitledPane text="Formulario" expanded="true">
            <content>
                <GridPane hgap="10" vgap="10">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <children>
                        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Grupo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="grupoCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <HBox spacing="8" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
                            <children>
                                <Button text="Nuevo" onAction="#nuevo"/>
                                <Button text="Guardar" onAction="#guardar"/>
                                <Button text="Eliminar" onAction="#eliminar"/>
                            </children>
                        </HBox>
                    </children>
                </GridPane>
            </content>
        </TitledPane>
    </bottom>
</BorderPane>
